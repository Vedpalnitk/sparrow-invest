# =============================================================
# Sparrow Invest Backend — Environment Variables
# Copy to .env and adjust as needed:  cp .env.example .env
# Defaults match docker-compose.dev.yml (local development).
# =============================================================

# ---- Core ----
PORT=3801
NODE_ENV=development

# ---- PostgreSQL (docker-compose.dev.yml → si-dev-postgres) ----
DATABASE_URL="postgresql://siuser:sipassword@localhost:3832/sparrowinvest_local?schema=public"

# ---- Redis (docker-compose.dev.yml → si-dev-redis) ----
REDIS_HOST=localhost
REDIS_PORT=3879

# ---- MinIO / Object Storage (docker-compose.dev.yml → si-dev-minio) ----
MINIO_ENDPOINT=localhost
MINIO_PORT=3890
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ml-models

# ---- JWT ----
JWT_SECRET=local-dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# ---- ML Service (optional — only needed for AI features) ----
# ML_SERVICE_URL=localhost:3503
# ML_SERVICE_HTTP_URL=http://localhost:8000

# ---- Email / SMTP (optional — only needed for email features) ----
